<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <FrameLayout
            android:id="@+id/fragmentMonday"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:measureAllChildren="true"
            android:layout_marginBottom="5dp"/>
        <FrameLayout
            android:name="com.example.developer.lorimobile.fragment.DayFragment"
            android:id="@+id/fragmentTuesday"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:measureAllChildren="true"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <FrameLayout
            android:name="com.example.developer.lorimobile.fragment.DayFragment"
            android:id="@+id/fragmentWednesday"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:measureAllChildren="true"
            android:layout_marginBottom="5dp"/>

        <FrameLayout
            android:name="com.example.developer.lorimobile.fragment.DayFragment"
            android:id="@+id/fragmentThursday"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:measureAllChildren="true"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <FrameLayout
            android:name="com.example.developer.lorimobile.fragment.DayFragment"
            android:id="@+id/fragmentFriday"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:measureAllChildren="true"
            android:layout_marginBottom="5dp"/>
        <FrameLayout
            android:name="com.example.developer.lorimobile.fragment.DayFragment"
            android:id="@+id/fragmentSaturday"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:measureAllChildren="true"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fragmentSunday"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:measureAllChildren="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>
    </LinearLayout>



</LinearLayout>